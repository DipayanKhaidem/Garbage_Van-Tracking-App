<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BBMPVehicleTrackingAPP"
        tools:targetApi="31">

        <!-- SplashActivity (Launcher Activity) -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- RoleSelectionActivity -->
        <activity
            android:name=".RoleSelectionActivity"
            android:exported="false" />

        <!-- UserLoginActivity -->
        <activity
            android:name=".UserLoginActivity"
            android:exported="false" />

        <!-- DriverLoginActivity -->
        <activity
            android:name=".DriverLoginActivity"
            android:exported="false" />

        <!-- UserDashboardActivity -->
        <activity
            android:name=".UserDashboardActivity"
            android:exported="false" />

        <!-- DriverDashboardActivity -->
        <activity
            android:name=".DriverDashboardActivity"
            android:exported="false" />

        <!-- SignUpActivity -->
        <activity
            android:name=".SignUpActivity"
            android:exported="false" />

        <!-- SettingsActivity -->
        <activity
            android:name=".SettingsActivity"
            android:exported="false" />

        <!-- MainActivity (Remove MAIN and LAUNCHER intent filters if not needed) -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

    </application>

</manifest>